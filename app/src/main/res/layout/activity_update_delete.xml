<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:orientation="vertical"
    android:background="@color/background">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="Sửa hoặc xóa công việc"
            android:textColor="@color/font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tvTenCV"
            android:layout_width="match_parent"
            android:hint="Tên công việc"
            android:background="@drawable/rounded_edittext"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#43000000"
            />
        <EditText
            android:id="@+id/tvNoiDung"
            android:layout_width="match_parent"
            android:hint="Nội dung công việc"
            android:background="@drawable/rounded_edittext"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#43000000" />
        <EditText
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:hint="Ngày hoàn thành"
            android:background="@drawable/rounded_edittext"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#43000000"/>
        <Spinner
            android:id="@+id/spCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công tác:"
                android:textSize="20dp"
                android:textColor="#43000000"
                android:layout_marginStart="10dp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">
                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Làm chung"
                    android:textColor="#43000000"

                    />
                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Một mình"
                    android:textColor="#43000000"
                    />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại công việc:"
            android:textSize="20dp"
            android:textColor="#43000000"
            android:layout_marginStart="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox1"
            android:text="Học"
            android:enabled="true"
            android:textColor="#43000000"

            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox2"
            android:text="Chơi"
            android:enabled="true"
            android:textColor="#43000000"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox3"
            android:text="Làm"
            android:enabled="true"
            android:textColor="#43000000"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btUpdate"
            android:layout_weight="1"
            android:text="Sua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#4FC3F7"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/btDel"
            android:layout_weight="1"
            android:text="Xoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#E57373"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/btBack"
            android:layout_weight="1"
            android:text="Quay lai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#90A4AE"
            />
    </LinearLayout>
</LinearLayout>